<!doctype html>
<html lang="fr">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
        <script src="../js/bootstrap.js"></script>

        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    </head>
{% apply inline_css %}
<body>

    <style>
        .article{
            width : 95%;
            height : 200px;
            margin-top : 5%;
            border-bottom:2px solid #ddd;
            padding: 70px;
            padding-top: 50px; 
        }

        .photo{
            height:130px;
            width:130px;
        }
    </style>
    <div>
        {% include 'navbar.php' %}
    </div>

    <h1>{{ pluralize((produits|length), 'produit', 'produits') }} dans la catégorie bien-être.</h1>
    
    <div class="container justify-content-center" style="margin-top:150px">
        

        {% for produit in produits %}
            {%  set route_name = "produit_" ~ app.request.attributes.get('_route')%}
            {%  set photo = "../images/produit/" ~ produit.photo %}
            
            <div class="container">
                <img src="{{ photo }}" class="photo" alt="{{ produit.slug }}">
            </div>
            <div class="article container justify-content-center">
                <h2><a href="{{ path(
                    route_name, {slug: produit.slug} )}}">{{ produit.titre}}</a></h2>
            </div>
        {% endfor %}
    </div>


    <div>
        {% include 'footer.php' %}
    </div>
</body>
{% endapply %}
</html>
